{
  "extends": "artcom",
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-console": "off",
    "no-param-reassign": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "no-unused-vars": ["off"],
        "no-undef": ["off"]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src", "test"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
